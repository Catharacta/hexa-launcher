{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hexa Launcher",
  "version": "0.2.1",
  "identifier": "hexa-launcher-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hexa Launcher",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "dragDropEnabled": true,
        "maximized": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
